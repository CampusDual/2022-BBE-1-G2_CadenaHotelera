<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
	xmlns="http://www.ontimize.com/schema/jdbc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
	catalog="" schema="${mainschema}" table="booking_details"
	datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
	<DeleteKeys>
		<Column>bok_det_id</Column>
	</DeleteKeys>
	<UpdateKeys>
		<Column>bok_det_id</Column>
	</UpdateKeys>
	<GeneratedKey>bok_det_id</GeneratedKey>
	<Queries>
		<Query id="updatePaid">
			<Sentence>
				<![CDATA[
					UPDATE PUBLIC.booking_details
					SET bok_det_paid = true
					#WHERE#
					RETURNING bok_det_id AS cambios;						
				]]>
			</Sentence>
		</Query>
		<Query id="detailsByBok">
			<Sentence>
				<![CDATA[
					SELECT
			     	#COLUMNS#
			     	FROM public.details_type d
					INNER JOIN public.booking_details bd ON d.det_id = bd.bok_det_type			     	
			  		#WHERE#
			  		ORDER BY d.det_description					
				]]>
			</Sentence>
		</Query>
	</Queries>
</JdbcEntitySetup>